                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Alliance</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ app.user.ally }}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Grade</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{app.user.grade }}
                                </div>
                            </div>
