                                <div class="mt-3">
                                    <h4>{{ app.user.username }}</h4>
                                    <p class="text-secondary mb-1">{{ app.user.email }}</p>
                                    <p class="text-muted font-size-sm">{{ app.user.ingameId }}</p>
                                    <div class="row">
                                        <div class="col-sm">
                                            <h6 class="mb">Country</h6>
                                        </div>
                                        <div class="col-sm text-secondary">
                                            {{app.user.country }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm">
                                            <h6 class="mb">TimeZone</h6>
                                        </div>
                                        <div class="col-sm text-secondary">
                                            {{app.user.timezone }}
                                        </div>
                                    </div>
