                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Power</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ app.user.power }}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Merite</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{app.user.merit }}
                                </div>

                            </div>
                            <div class="col-md-1 offset-md-11">
                                <a class="btn btn-info " href="{{ path('app_profil_edituser') }}">Edit</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
