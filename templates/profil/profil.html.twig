                            <td>{{ total.fly }}</td>
                        </tr>

                        </tbody>
                    </table>
                    <div class="col-md-1 offset-md-11">
                        <a class="btn btn-info " href="{{ path('app_profil_editarmy') }}">Edit</a>
                    </div>
                </div>
            </div>
