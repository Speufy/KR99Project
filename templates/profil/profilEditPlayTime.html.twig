{% extends '/home/index.html.twig' %}
{% block title %}Hello ProfilEditController!{% endblock %}

    {% block body %}
        {{ form_start(form) }}

        <div class="container">
            <div class="main-body">
                <div class="row gutters-sm">
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center text-center">
                                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                                    <div class="mt-3">
                                        <h4>{{ app.user.username }}</h4>
                                        <p class="text-secondary mb-1">{{ app.user.email }}</p>
                                        <p class="text-muted font-size-sm">{{ app.user.ingameId }}</p>
                                        <div class="row">
                                            <div class="col-sm">
                                                <h6 class="mb">Country</h6>
                                            </div>
                                            <div class="col-sm text-secondary">
                                                {{app.user.country }}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm">
                                                <h6 class="mb">TimeZone</h6>
                                            </div>
                                            <div class="col-sm text-secondary">
                                                {{app.user.timezone }}
                                            </div>
                                        </div>
                                        {#                                        <div class="row">#}
                                        {#                                            <div class="col-sm">#}
                                        {#                                                <h6 class="mb">PrimeTime</h6>#}
                                        {#                                            </div>#}
                                        {#                                            <div class="col-sm text-secondary">#}
                                        {#                                                {{app.user.primeTime }}#}
                                        {#                                            </div>#}
                                        {#                                        </div>#}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Alliance</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{ app.user.ally }}
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Rank</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{app.user.grade }}
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Power</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{ app.user.power|number_format(0, '.', ',') }}
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Merite</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{app.user.merit|number_format(0, '.', ',') }}
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="card mt-1">
                <div class="card-body">
                    <h5 class="card-title"><i class="material-icons text-info mr-2">Active Play Time UTC Hour</i></h5>
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th>0-1 H</th>
                            <th>1-2 H</th>
                            <th>2-3 H</th>
                            <th>3-4 H</th>
                            <th>4-5 H</th>
                            <th>5-6 H</th>
                            <th>6-7 H</th>
                            <th>7-8 H</th>
                            <th>8-9 H</th>
                            <th>9-10 H</th>
                            <th>10-11 H</th>
                            <th>11-12 H</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td >{{ form_row(form.hour1,{'label':false}) }}</td>
                            <td >{{ form_row(form.hour2,{'label':false}) }}</td>
                            <td >{{ form_row(form.hour3,{'label':false}) }}</td>
                            <td >{{ form_row(form.hour4,{'label':false}) }}</td>
                            <td >{{ form_row(form.hour5,{'label':false}) }}</td>
                            <td >{{ form_row(form.hour6,{'label':false}) }}</td>
                            <td >{{ form_row(form.hour7,{'label':false}) }}</td>
                            <td >{{ form_row(form.hour8,{'label':false}) }}</td>
                            <td >{{ form_row(form.hour9,{'label':false}) }}</td>
                            <td >{{ form_row(form.hour10,{'label':false}) }}</td>
                            <td >{{ form_row(form.hour11,{'label':false}) }}</td>
                            <td >{{ form_row(form.hour12,{'label':false}) }}</td>
                        </tr>
                        </tbody>
                    </table>

                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th>12-13 H</th>
                            <th>13-14 H</th>
                            <th>14-15 H</th>
                            <th>15-16 H</th>
                            <th>16-17 H</th>
                            <th>17-18 H</th>
                            <th>18-19 H</th>
                            <th>19-20 H</th>
                            <th>20-21 H</th>
                            <th>21-22 H</th>
                            <th>22-23 H</th>
                            <th>23-24 H</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td >{{ form_row(form.hour13,{'label':false}) }}</td>
                            <td >{{ form_row(form.hour14,{'label':false}) }}</td>
                            <td >{{ form_row(form.hour15,{'label':false}) }}</td>
                            <td >{{ form_row(form.hour16,{'label':false}) }}</td>
                            <td >{{ form_row(form.hour17,{'label':false}) }}</td>
                            <td >{{ form_row(form.hour18,{'label':false}) }}</td>
                            <td >{{ form_row(form.hour19,{'label':false}) }}</td>
                            <td >{{ form_row(form.hour20,{'label':false}) }}</td>
                            <td >{{ form_row(form.hour21,{'label':false}) }}</td>
                            <td >{{ form_row(form.hour22,{'label':false}) }}</td>
                            <td >{{ form_row(form.hour23,{'label':false}) }}</td>
                            <td >{{ form_row(form.hour24,{'label':false}) }}</td>
                        </tr>
                        </tbody>
                    </table>
                        <div class="col-md-1 offset-md-11">
                        {{ form_row(form.edit) }}
                    </div>
                </div>
            </div>

        </div>



    {%endblock %}